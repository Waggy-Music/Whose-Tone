<div class="container  my-5"style="text-align:center;">
  <div class="row">
    <div class="col-md-2">
      
    </div>
    <div class="col-md-8">
      <h2 class="table-secondary">マイページ</h2>
      <image>
          <% if @user.image.attached? %>
            <%= image_tag @user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
      </image>
      <br>
      <% if @user.artist? %>
        <table class="table table-bordered mt-2 ">
          <tr>
            <td class="table-secondary text-nowrap">ニックネーム</td>
            <td><%= @user.nick_name%></td>
          </tr>
          <tr>
            <td class="table-secondary text-nowrap">アカウント種別</td>
            <td><%= @user.role_i18n%></td>
          </tr>
          <tr>
            <td class="table-secondary text-nowrap">プロフィール</td>
            <td><%= @user.profile%></td>
          </tr>
          <tr>
            <td class="table-secondary text-nowrap">活動エリア</td>
            <td><%= @user.action_range%></td>
          </tr>
          <tr>
            <td class="table-secondary text-nowrap">活動スタイル</td>
            <td><%= @user.action_style%></td>
          </tr>
          <tr>
            <td class="table-secondary">リンク</td>
            <td><%= text_url_to_link((h(@user.links).html_safe)).html_safe %> </td>
          </tr>
          <tr>
            <td class="table-secondary">タグ</td>
            <td><%= @user.tag%></td>
          </tr>
          <tr>
            <td class="table-secondary">ステータス</td>
            <td><% if @user.is_deleted == false%>
              <strong class="text-success"><%='有効' %></strong>
              <%else%>
              <strong class="text-danger"><%='退会済み' %></strong>
              <%end%>
            <%=link_to"変更する",admin_user_path(@user.id), method: :patch,class: "btn btn-warning"%></td>
          </tr>

  </table>
      <% else %>
      <%= render 'show',user: @user%>
      <% end %>
            <% if @user ==current_user%>
            <td><%=link_to "編集", admin_edit_user_path, class: 'btn btn-success' %></td>
            <%=link_to "退会する",admin_users_unsubscribe_path, class: 'btn btn-danger' %>
            <%end%>
            <td><%=link_to "一覧に戻る", admin_users_path, class: 'btn btn-warning'%></td>
    </div>
    <div class="col-md-2">
      
    </div>
    
  </div>
</div>